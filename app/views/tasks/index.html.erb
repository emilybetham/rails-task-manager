<h1>My Tasks!</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><input type="checkbox" id="completed" name="completed"
         <% if task.completed == true %>
         checked>
         <% end %>
    <label for="completed"><%= link_to task.title, show_path(task) %></label>
    </li>
  <% end %>
</ul>


<%= link_to 'Add a new task', new_path %>


